<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onClick"
            type="gallery.photoapp.gallerypro.photoviewer.fragment.PrivateFragment.MyClickHandlers" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PrivateFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:id="@+id/ll_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/ic_private_vactor" />

                <TextView
                    android:id="@+id/tvEnterPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Enter Password"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etPass1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/ic_edit_back"
                        android:gravity="center"
                        android:hint="*"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etPass2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/ic_edit_back"
                        android:gravity="center"
                        android:hint="*"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etPass3"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/ic_edit_back"
                        android:gravity="center"
                        android:hint="*"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etPass4"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/ic_edit_back"
                        android:gravity="center"
                        android:hint="*"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/anti_theft_t9_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3.0">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_1"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey1Listener}"
                                android:text="@string/number_one"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_2"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey2Listener}"
                                android:text="@string/number_two"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_3"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey3Listener}"
                                android:text="@string/number_three"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_4"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey4Listener}"
                                android:text="@string/number_four"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_5"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey5Listener}"
                                android:text="@string/number_five"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_6"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey6Listener}"
                                android:text="@string/number_six"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_7"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey7Listener}"
                                android:text="@string/number_seven"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_8"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey8Listener}"
                                android:text="@string/number_eight"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_9"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey9Listener}"
                                android:text="@string/number_nine"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_forgot"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onForgotListener}"
                                android:text="@string/forget_passowrd"
                                android:textColor="#C4C4C4"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0">

                            <TextView
                                android:id="@+id/anti_theft_t9_key_0"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_back_txt"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{onClick::onKey0Listener}"
                                android:text="@string/number_zero"
                                android:textColor="@color/black"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/anti_theft_t9_key_backspace"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:onClick="@{onClick::onBackSpace}"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/ic_clear_txt"
                            android:textIsSelectable="false" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_private_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/list_private_image" />

                <RelativeLayout
                    android:id="@+id/rlLoading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
                        android:id="@+id/google_progress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        gpb:type="chrome_floating_circles" />

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_setLock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/ic_vector_passord_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/password_protect"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_setLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/curve_btn"
                    android:fontFamily="@font/lato_black"
                    android:onClick="@{onClick::onSetLock}"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Set Security"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_noData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:src="@drawable/ic_no_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/no_data_available"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/up_curve"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Enter Mobile Number*"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="*Enter Mobile Number With Country Code."
                    android:textSize="@dimen/_8sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:layout_marginHorizontal="@dimen/_17sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:background="@drawable/edit_background"
                        android:hint="+91 99xxxxx88"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#80000000" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvSendOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:background="@drawable/image_background"
                    android:backgroundTint="@color/purple_200"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Send OTP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>